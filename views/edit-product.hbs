<div class="w-75 mx-auto">
  <p class="fs-1">Edit products</p>
  {{#if errorEditProducts}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
  <strong>Error!</strong> 
  {{errorEditProducts}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  {{/if}}
  <form action="/edit-product/{{product._id}}" method="post">
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        id="floatingInput"
        name="title"
        placeholder="title"
        value="{{product.title}}"
      />
      <label for="floatingInput">Title</label>
    </div>
    <div class="form-floating mb-3">
      <textarea
        class="form-control"
        placeholder="Description"
        id="floatingTextarea2"
        name="description"
        style="height: 150px"
      >{{product.description}}</textarea>
      <label for="floatingTextarea2">Description</label>
    </div>
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        id="floatingInput"
        name="image"
        placeholder="Image"
        value="{{product.image}}"
      />
      <label for="floatingInput">Image</label>
    </div>
    <div class="input-group mb-3 ">
      <span class="input-group-text bg-light  ">$</span>
      <div class="form-floating w-75">
        <input
          type="number"
          name="price"
          class="form-control"
          id="floatingInputGroup1"
          placeholder="Price"
          value="{{product.price}}"
        />
        <label for="floatingInputGroup1">Price</label>
      </div>
    </div>

    <button class="btn btn-primary mt-3" type="submit">Edit products</button>
  </form>
</div>